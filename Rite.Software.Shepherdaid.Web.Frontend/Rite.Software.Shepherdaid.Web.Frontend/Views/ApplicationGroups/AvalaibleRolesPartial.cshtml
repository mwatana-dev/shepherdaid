@model IEnumerable<Rite.Software.Shepherdaid.DAL.SecurityEntities.AppRole>

<div class="container-fluid">
    <div class="col-md-12">

        <fieldset>
            <legend class="font-weight-bold">GROUP AVAILABLE ROLES</legend>

            @using (Html.BeginForm("AddGroupRoles", "ApplicationGroups"))
            {
                @Html.AntiForgeryToken()

                if (!ViewData.ModelState.IsValid)
                {
                    @Html.ValidationMessage("Error")
                }

                if (Model != null && Model.Count() > 0)
                {
                    <div>
                        <input type="submit" id="btn-assign" name="btn-assign" class="btn btn-outline-dark btn-block" value="Assign" onclick="return confirm('This action will assign the selected roles to the group.');" />
                    </div>

                    <div class="table-responsive">
                        <table id="ListTable" class="table table-bordered table-striped table-responsive">
                            <thead>
                                <tr>
                                    <th>
                                        <input type="checkbox" name="check-all-available" id="check-all-available" value="0" title="select/deselect all" />
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.RankType.Rank)
                                    </th>

                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>
                                            <div class="checkbox" id="div-available-item">
                                                <label>
                                                    <input type="checkbox"
                                                           name="available"
                                                           id="available"
                                                           value="@item.Id" />
                                                </label>
                                            </div>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RankType.Rank)
                                        </td>
                                    </tr>

                                }
                            </tbody>

                        </table>
                    </div>
                }
            }
        </fieldset>
    </div>
</div>

