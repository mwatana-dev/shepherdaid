@model IEnumerable<Rite.Software.Shepherdaid.DAL.SecurityEntities.ApplicationGroup>

@{
    ViewBag.Title = "Application Groups";
    int cnt = 0;
}
<div class="container-fluid">
    <div class="col-md-12">

        <p class="text-right">
            @Html.ActionLink(" ", "Create", new { }, new { @class = "fa fa-plus-square", @title = "create new" })
        </p>

        @if (Model != null && Model.Count() > 0)
        {
        <div class="table-responsive">
            <table id="ListTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            No.
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Parish.Name)
                        </th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @string.Format("{0}.", ++cnt)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Parish.Name)
                            </td>

                            <td class="text-center">
                                @Html.ActionLink(" ", "GroupRoles", new { id = item.Id }, new { @class = "fa fa-arrow-circle-right", @title = "assign roles" }) 
                                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "fa fa-edit", @title = "edit" }) 
                                @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "fa fa-trash text-danger", @title = "delete", @onclick = "return confirm('This action will delete this record.');" })
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>
        }
    </div>
</div>


@section Scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            $('#ListTable').DataTable();
        });
    </script>
}