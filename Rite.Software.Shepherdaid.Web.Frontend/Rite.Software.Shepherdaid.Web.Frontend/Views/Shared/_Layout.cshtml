                        </a>
                        <div class="dropdown-menu" aria-labelledby="setup-dropdown">
                            @if (true)
                            {
                                <a class="dropdown-item">Manage Churches</a>
                            }
                            @if (true)
                            {
                                <a class="dropdown-item">Manage Dioceses</a>
                            }
                            @if (true)
                            {
                                <a class="dropdown-item">Manage Parishes</a>
                            }
                        </div>
                    </li>

                    <li class="nav-item">
                        <a href="#" class="nav-link">Security</a>
                    </li>
                </ul>

            </div>
        </div>

        <div class="body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; 2012 - @DateTime.Now.Year - Shepherd Aid</p>
            </footer>
        </div>
    </div>
