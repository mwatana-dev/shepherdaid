@model IEnumerable<Rite.Software.Shepherdaid.DAL.SecurityEntities.AppUserRole>

<div class="col-md-12">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <strong>USER ASSIGNED ROLES</strong>
        </div>

        <div class="panel-body">
            @using (Html.BeginForm("RevokeUserRoles", "AppUsers"))
            {
                @Html.AntiForgeryToken()

                if (!ViewData.ModelState.IsValid)
                {
                    @Html.ValidationMessage("Error")
                }

                if (Model != null && Model.Count() > 0)
                {
                    <div class="">
                        <input type="submit" id="btn-revoke" name="btn-revoke" class="btn btn-primary" value="Revoke" onclick="return confirm('This action will revoke the selected roles from the group and from all users to whom the roles are assinged.');" />
                    </div>

                    <table id="ListTable" class="table table-bordered table-striped table-responsive">
                        <thead>
                            <tr>
                                <th>
                                    <input type="checkbox" name="check-all-assigned" id="check-all-assigned" value="0" title="select/deselect all" />
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AppRole.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AppRole.RankType.Rank)
                                </th>

                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        <div class="checkbox" id="div-assigned-item">
                                            <label>
                                                <input type="checkbox"
                                                       name="assigned"
                                                       id="assigned"
                                                       value="@item.RoleId" />
                                            </label>
                                        </div>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AppRole.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AppRole.RankType.Rank)
                                    </td>
                                </tr>

                            }
                        </tbody>

                    </table>
                }

            }
        </div>
    </div>
</div>