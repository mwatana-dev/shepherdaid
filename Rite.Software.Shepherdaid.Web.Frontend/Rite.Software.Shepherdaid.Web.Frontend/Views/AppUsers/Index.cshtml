@model IEnumerable<Rite.Software.Shepherdaid.DAL.SecurityEntities.AppUser>

@{
    ViewBag.Title = "App Users";
    int cnt = 0;
}

<div class="container-fluid">
    <div class="col-md-12">

        <p class="text-right">
            @Html.ActionLink(" ", "Create", new { }, new { @class = "fa fa-plus-square", @title = "create new" })
        </p>

        @if (Model != null && Model.Count() > 0)
        {
            <div class="table-responsive">
                <table id="ListTable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                No.
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MiddleName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LastName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ApplicationGroup.Name)
                            </th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @string.Format("{0}.", ++cnt)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MiddleName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ApplicationGroup.Name)
                                </td>

                                <td class="text-center">
                                    @Html.ActionLink(" ", "Transfer", new { id = item.Id }, new { @class = "fa fa-random", @title = "transfer" })
                                    @Html.ActionLink(" ", "UserRoles", new { id = item.Id }, new { @class = "fa fa-arrow-circle-right", @title = "assign roles" })
                                    @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "fa fa-edit", @title = "edit" })
                                    @Html.ActionLink(" ", "Disable", new { id = item.Id }, new { @class = "fa fa-power-off text-danger", @title = "disable", @onclick = "return confirm('This action will disable this record.');" })
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>

            </div>
        }
    </div>
</div>


@section Scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            $('#ListTable').DataTable();
        });
    </script>
}