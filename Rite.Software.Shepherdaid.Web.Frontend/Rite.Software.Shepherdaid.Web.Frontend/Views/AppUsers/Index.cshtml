@model IEnumerable<Rite.Software.Shepherdaid.DAL.SecurityEntities.AppUser>

@{
    ViewBag.Title = "App Users";
    Layout = "~/Views/Shared/_Security.cshtml";
    int cnt = 0;
}


<div class="row">
    <div class="panel panel-primary">
        <div class="panel-body">
            <div class="col-md-12">

                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>

                @if (Model != null && Model.Count() > 0)
                {
                    <table id="ListTable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    No.
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FirstName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MiddleName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LastName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UserName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ApplicationGroup.Name)
                                </th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @string.Format("{0}.", ++cnt)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MiddleName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ApplicationGroup.Name)
                                    </td>

                                    <td class="text-center">
                                        @Html.ActionLink(" ", "Transfer", new { id = item.Id }, new { @class = "glyphicon glyphicon-transfer", @title = "transfer" }) |
                                        @Html.ActionLink(" ", "UserRoles", new { id = item.Id }, new { @class = "glyphicon glyphicon-ok-sign", @title = "assign roles" }) |
                                        @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-edit", @title = "edit" }) |
                                        @Html.ActionLink(" ", "Disable", new { id = item.Id }, new { @class = "glyphicon glyphicon-off text-danger", @title = "disable", @onclick = "return confirm('This action will disable this record.');" })
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>

                }
            </div>
        </div>
    </div>
</div>


@section Scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            $('#ListTable').DataTable();
        });
    </script>
}